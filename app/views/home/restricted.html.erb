<% if tutor_signed_in? %>
    <h1>Your Subjects</h1>
    <%= render 'subjects_form', locals: @subject %>
    
<% end %>
<% if student_signed_in? %>
    <h2>My Favourite Tutors</h2>

    <% if @tutors != [] %>
        <% @tutors.each do |tutor| %>
        <div class="tutor_fave_container">
            <% if tutor.profile.photo.url %>
                <%= cl_image_tag tutor.profile.photo.url , class: 'tutor_fave_pic', :width => 130, :crop => "pad", cloud_name: $cloud_name %>
            <% end %><br><br>
            <%= tutor.firstname ? tutor.firstname.capitalize : 'none' %> 
            <%= tutor.lastname.capitalize %><br>
            <%= tutor.email.downcase.sub(/\A(.)(.*)(...)\z/) {|m| $1 + ("*" * $2.length) + $3 } %><br>
            <%= tutor.state.upcase %><br>
            <%= tutor.country.upcase %><br>
            <%= link_to 'View Profile', student_tutor_profile_path(tutor), class: "btn btn-primary btn" %><br><br>
            <%= link_to "remove from favourites", {controller: "student", action: "favourite", id: tutor.id, remove: true}, class: "btn btn-sm btn-outline-info" %><br><br>
            <hr>
        </div>
        <% end %>
    <% else %>
        <h4>You currently have no favourites selected</h4>
        <br>
        <%= link_to "back", request.referer.present? ? request.referer : default_path %>
    <% end %>

<% end %>