<% if tutor_signed_in? %>
    <h1><%= @tutor.firstname %>'s Subjects</h1>
    <%= render 'subjects_form', locals: @subject %>
    
<% end %>
<% if student_signed_in? %>
    <h1>My Favourite Tutors</h1>

    <% if @tutors != [] %>
        <% @tutors.each do |tutor| %>
            <%= tutor.firstname ? tutor.firstname.capitalize : 'none' %><br>
            <%= tutor.lastname.capitalize %><br>
            <%= tutor.email.downcase %><br>
            <%= tutor.address_1.capitalize %><br>
            <% if tutor.address_2 != '' && !tutor.address_2.nil? %>
                <%= tutor.address_2.capitalize %><br>
            <% end %>
            <%= tutor.postcode %><br>
            <%= tutor.state.upcase %><br>
            <%= tutor.country.upcase %><br>
            <%= link_to 'View Profile', student_tutor_profile_path(tutor) %><br>
            <%= link_to "remove from favourites", :controller => "student", :action => "favourite", :id => tutor.id, :remove => true %><br><br>
        <% end %>
    <% else %>
        <h4>You currently have no favourites selected</h4>
        <br>
        <%= link_to "back", request.referer.present? ? request.referer : default_path %>
    <% end %>

<% end %>