<h1><%=@tutor.firstname%> <%=@tutor.lastname%>'s Profile</h1>
<br>

<% if @profile %>
    <p>
    <h3><%= @profile.title %></h3>
    <p>
    <%= @profile.description %>
    </p>
    <br>
    <% unless @profile.photo.url.nil? %>
        <%= cl_image_tag @profile.photo.url, cloud_name: $cloud_name %>
    <% end %>
    <br><br><%= link_to "Edit Profile", profile_form_path, class: "btn btn-sm btn-info" %><br><br>
    <% if @subjects.first %>
        <%= link_to "Edit Subjects or Hours", restricted_path, class: "btn btn-sm btn-warning"%><br><br>
        <h4>Subjects You Offer</h4>
        <% @subjects.each do |subject| %>
        <%= subject.title.upcase %><br>
        Hours available: <%= subject.time %>  <br><br>
        <% end %>
    <% else %>
        <h4>You are currently teaching no subjects</h4>
        <p>Click the link below to add a subject and the amount of hours this month you wish to teach.</p>
        <%= link_to "Add subjects", restricted_path, class: "btn btn-sm btn-success" %>
    <% end %>
    </p>
    <hr>
    
<% else %>
    <h4>You haven't set up your profile yet.</h4>
    <%= link_to 'Create A Profile', profile_form_path %>
<% end %>
