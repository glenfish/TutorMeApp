<h1>Bookings</h1>
<% if @bookings.exists? %>
    <% booking_array = [] %>
    <% total_earned = 0 %>
    <% all_bookings_formatted = "" %>
    <% @bookings.reverse.each do |booking| %>
        <% total_earned = total_earned + Payment.find_by(booking_id: booking.id).amount %>
        <% all_bookings_formatted << "#{get_tutor_booking_info(booking)}" %>
        <% all_bookings_formatted << "<br><hr><br>" %>
    <% end %>
    <h5>Total earnings: $<%= total_earned %>.00</h5><br>
    <%= sanitize all_bookings_formatted %>
    
<% else %>
        <p>You have no bookings.</p>
<% end %>

