<h2><%= @tutor.firstname %> <%= @tutor.lastname %></h2><br>
<% if @tutor_profile %>
    <% if @tutor.profile.photo.url %>
        <%= cl_image_tag @tutor.profile.photo.url, class: 'profile_image_main', cloud_name: $cloud_name %>
    <% end %>
    <h3><%= @tutor_profile.title %></h3>
    <p>
    <%= @tutor.profile.description %><br><br>
    
    <h6>State: <%= @tutor.state.upcase%></h6>
    <h6>Country: <%= @tutor.country.upcase%></h6><br>
    <% if @subjects.first %>
        <h4>Subjects Hours Available This Month</h4>
        <% @subjects.each do |subject| %>
        <% subject.time > 0 ? time_available = true : time_available = false %>
        <strong><%= subject.title.upcase %></strong><br>
        Hours available: <%= subject.time %>
        <% if time_available %>
            
            <%= button_to "Book Time", booking_page_path, method: :get, params: { subject: subject.id, tutor: @tutor.id } %><br><br>
            
        <% else %>
            <br><br>
        <% end %>
        <% end %>
    <% else %>
        <br><h4><%= @tutor.firstname %> is not actively tutoring at this time</h4>
        <% end %>
    </p>
<% else %>
    <p>There is no profile for this Tutor yet</p>
<% end %>
<% if !@exists %>
    <%= link_to "add to favourites", favourite_path(@tutor.id) %> | 
<% else %>
    <%= link_to "remove from favourites", :controller => "student", :action => "favourite", :id => @tutor.id, :remove => true %> | 
<% end %>
<%= link_to "back", request.referer.present? ? request.referer : default_path %>
<br><br>